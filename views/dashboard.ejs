    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <nav id="navbar">
    <h2 id="header">Blog It!</h2>
    <a href="/logout" class="btn links" id="signoutlink">SIGNOUT</a>
  </nav>
    <!-- <div class="Info">
      <p id="infotext"><%= full_name %>'s Page</p>
      <p class="infotext">Total Blogs Published: <%=blogs.length%></p>
    </div> -->
    <div id="main">
    <h4 class="randomtext"><%=full_name%>'s Blogs: </h4>
    <a href="/dashboard/new" class="btn links write-new">Write a New Blog</a>
    <div class="container dash">
      <%if (blogs == ''){ %>
        <p id="no-blog">You have published no blogs:/</p>
      <%} else {%>
      <% blogs.forEach(element => { %>
          <div class="card-ind">
            <p class="card-date"><%= element.date%></p>
            <h5 class="card-title"><%=element.title%></h5>
            <p class="card-text desc"><%=element.description%></p>
            <div id="links">
            <a href="/dashboard/<%=element.id%>" id="read" class="links btn card-text">Read More</a>
            <a href="/dashboard/<%=element.id%>/edit" id="edit" class="links btn card-text">Edit</a>
          </div>
            <%if(element.publish == true) {%>
            <p class="text-success"><i>Published</i></p>
            <%} else{%>
            <p class="text-danger"><i>Not Published</i></p>
            <%}%>
          </div>
          <%});%>
          <%}%>
    </div>
    </div>
    <footer id="footer">
      <div class="footer_div">
      <!-- <p>Blog Website</p> -->
      <p><i class="fa fa-facebook social fa-2x btn" aria-hidden="true"></i>
        <i class="fa fa-twitter social fa-2x btn" aria-hidden="true"></i>
        <i class="fa fa-instagram social fa-2x btn" aria-hidden="true"></i>
        <i class="fa fa-envelope social fa-2x btn" aria-hidden="true"></i>
      </p>
      </div>
    </footer>
</body>
</html>